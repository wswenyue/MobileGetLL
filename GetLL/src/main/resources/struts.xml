<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <package name="xiayule" extends="struts-default">
        <!-- 默认主页 -->
        <default-action-ref name="default"/>
        <!-- 为了解决 sae 默认首页不闲问题 -->
        <action name="default" class="com.xiayule.getll.action.DefaultAction">
            <result name="success">/index.html</result>
        </action>

        <action name="subscribe" class="subscribeAction">
            <result name="success" type="redirect">/success.jsp</result>
            <result name="error">/index.jsp</result>
        </action>

        <action name="search" class="searchAction">
            <result name="success">/search.jsp</result>
            <result name="error">/search.jsp</result>
        </action>
    </package>

    <package name="ajax" namespace="/ajax" extends="struts-default">
        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>

        <interceptors>
            <interceptor name="json" class="org.apache.struts2.json.JSONInterceptor"/>
        </interceptors>
        
        <action name="login" class="ajaxAction" method="login">
            <result type="json">
                <param name="root">json</param>
            </result>
        </action>

        <action name="loadLoginMobile" class="ajaxAction" method="loadLoginMobile">
            <result type="json">
                <param name="root">json</param>
            </result>
        </action>

        <action name="queryScore" class="ajaxAction" method="queryScore">
            <result type="json">
                <param name="root">jsonObj</param>
            </result>
        </action>

        <action name="logout" class="ajaxAction" method="logout">
            <result type="json">
                <param name="root">json</param>
            </result>
        </action>

        <action name="getRegisterCode" class="ajaxAction" method="getRegisterCodeDo">
            <result type="json">
                <param name="root">json</param>
            </result>
        </action>

        <action name="shakeNow" class="ajaxAction" method="shakeNow">
            <result type="json">
                <param name="root">json</param>
            </result>
        </action>

        <!--js调用该接口后，出现问题-->
        <action name="getRemainTimes" class="ajaxAction" method="getRemainTimes">
            <result type="json">
                <param name="root">json</param>
            </result>
        </action>

        <action name="queryCreditSum" class="ajaxAction" method="queryCreditSum">
            <result type="json">
                <param name="root">jsonObj</param>
            </result>
        </action>

        <action name="queryCreditDetail" class="ajaxAction" method="queryCreditDetail">
            <result type="json">
                <param name="root">jsonObj</param>
            </result>
        </action>
    </package>
</struts>